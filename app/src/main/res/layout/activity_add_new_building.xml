<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddNewBuildingActivity"
        android:background="@color/cardViewColorBackground"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingTop="30dp"
                android:padding="15dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_add_building_text"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            <EditText
                    android:id="@+id/add_building_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_building_id"
                    android:layout_margin="5dp"
                    android:padding="10dp"/>
            <EditText
                    android:id="@+id/add_building_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_building_name"
                    android:layout_margin="5dp"
                    android:padding="10dp"/>
            <EditText
                    android:id="@+id/add_building_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_building_address"
                    android:layout_margin="5dp"
                    android:padding="10dp"/>

        </LinearLayout>
        </android.support.v7.widget.CardView>
